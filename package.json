{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "yarn && lerna bootstrap",
    "format": "prettier --config .prettierrc.json --write \"packages/**/*.{js,ts}\"",
    "preRelease": "lerna run clean && lerna run build"
  },
  "devDependencies": {
    "lerna": "^5.3.0",
    "prettier": "^2.7.1",
    "lint-staged": "^10.2.4",
    "husky": "^4.3.0"
  },
  "lint-staged": {
    "packages/**/*.{js,ts}": [
      "npm run eslint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
